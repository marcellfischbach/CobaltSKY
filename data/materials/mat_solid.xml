<materials>

	<material name="Solid">
	
		<passes>
			<pass name="GBuffer">${shaders}/solid.xml:GBuffer</pass>
			<pass name="ShadowPSSM">${shaders}/solid.xml:ShadowPSSM</pass>
			<pass name="ShadowCube">${shaders}/solid.xml:ShadowCube</pass>
		</passes>
		
		<parameters>
			<parameter type="texture" name="Diffuse">${materials}/textures.xml:FieldStone</parameter>
			<parameter type="texture" name="Normal">${materials}/textures.xml:FieldStoneNormal</parameter>
			<parameter type="col" name="Color">1.0;1.0;1.0;1.0</parameter>
		</parameters>
		
	</material>
	
	<material name="SolidColor">
	
		<passes>
			<pass name="GBuffer">${shaders}/solid.xml:GBufferColor</pass>
			<pass name="ShadowPSSM">${shaders}/solid.xml:ShadowPSSM</pass>
			<pass name="ShadowCube">${shaders}/solid.xml:ShadowCube</pass>
		</passes>
		
		<parameters>
			<parameter type="col" name="Color">1.0;1.0;1.0;1.0</parameter>
		</parameters>
		
	</material>
	
	<material name="SolidUnshaded">
		<passes>
			<pass name="ForwardUnshaded">${shaders}/solid.xml:ForwardUnshaded</pass>
			<pass name="ShadowPSSM">${shaders}/solid.xml:ShadowPSSM</pass>
			<pass name="ShadowCube">${shaders}/solid.xml:ShadowCube</pass>
		</passes>
		
		<parameters>
			<parameter type="texture" name="Diffuse">${materials}/textures.xml:FieldStone</parameter>
		</parameters>
		
	</material>
	
</materials>